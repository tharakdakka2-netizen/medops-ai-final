import pandas as pd
from sklearn.ensemble import RandomForestRegressor


import joblib
import numpy as np

# Create some fake "Pharmacy Data" to train our first version
data = {
    'stock': np.random.randint(50, 500, 100),
    'day': np.random.randint(0, 7, 100),
    'flu_rate': np.random.randint(0, 30, 100),
    'sales_next_day': np.random.randint(20, 100, 100)
}
df = pd.DataFrame(data)

# Features (X) and Target (y)
X = df[['stock', 'day', 'flu_rate']]
y = df['sales_next_day']

# Train the Random Forest (Chapter 7 of your book!)
model = RandomForestRegressor(n_estimators=100)
model.fit(X, y)

# SAVE THE BRAIN
joblib.dump(model, "med_inventory_model.pkl")
print("Success! 'med_inventory_model.pkl' has been created. Now upload it to GitHub!")
